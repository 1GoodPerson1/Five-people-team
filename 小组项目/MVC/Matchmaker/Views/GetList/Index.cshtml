@model IEnumerable<EF.loginUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("信息", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userPwd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Userinfo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userPwd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Userinfo)
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.Userid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Userid }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.Userid })
                </td>
            </tr>
        }

    </table>
</body>
</html>
