
@{
    Layout = null;
    int sesson = Convert.ToInt32(ViewData["sesson"]);
    string name = Convert.ToString(ViewData["name"]);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perinfo</title>
    <link rel="stylesheet" href="~/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/css/materialdesignicons.css.map">
    <link rel="stylesheet" href="~/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/image/favicon.png" />
    <title>Index</title>

</head>
<body>
    @sesson
    @if (sesson == 0)
    {

    }
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="index.html"><img src="~/image/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/image/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="找你喜欢的(❤ ω ❤)">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/image/faces/face1.jpg" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">@name</p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="#">
                                <i class="mdi mdi-cached mr-2 text-success"></i>
                                Activity Log
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index","Login")">
                                <i class="mdi mdi-logout mr-2 text-primary"></i>
                                退出
                            </a>
                        </div>
                    </li>
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                    <li class="nav-item nav-settings d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-format-line-spacing"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="~/image/faces/face1.jpg" alt="profile">
                                <span class="login-status online"></span> <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">登录名</span>
                                <span class="text-secondary text-small">性别</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","List")">
                            <span class="menu-title">首页</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item" id="laoban" >
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <span id="span" class="menu-title">人员</span>
                            <i class="menu-arrow"></i>
                            <i class="mdi mdi-crosshairs-gps menu-icon"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item" id="xingbie"> <a class="nav-link" id="nan" href="~/BOY/boyList">@sesson</a></li>
                                <li class="nav-item" id="xingbie1"> <a class="nav-link" id="nv" href="pages/ui-features/typography.html">@sesson</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="pages/icons/mdi.html">
                            <span class="menu-title">成功</span>
                            <i class="mdi mdi-contacts menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Perinfo","PerInfo")">
                            <span class="menu-title">完善个人信息</span>
                            <i class="mdi mdi-format-list-bulleted menu-icon"></i>
                        </a>
                    </li>




                    <li class="nav-item sidebar-actions">
                        <span class="nav-link">

                           
                            <div class="mt-4">
                                
                                <ul class="gradient-bullet-list mt-4">
                                    <li id="nvxing">女</li>
                                    <li id="nanxing">男</li>
                                </ul>
                            </div>
                        </span>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="col-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <form class="forms-sample">
                                    <div class="form-group">
                                        <label for="exampleInputName1">姓名</label>
                                        <input type="text" class="form-control" id="exampleInputName1" placeholder="姓名">
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">性别</label>
                                            <div class="col-sm-4">
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios1" value="男" checked>
                                                        男
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-check">
                                                    <label class="form-check-label">
                                                        <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios2" value="女">
                                                        女
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail3">年龄</label>
                                        <input type="text" class="form-control" id="nianling" placeholder="年龄">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">手机号</label>
                                        <input type="text" class="form-control" id="shoujihao" placeholder="手机号">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">邮箱</label>
                                        <input type="email" class="form-control" id="youxaing" placeholder="邮箱" value="@name">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">身高</label>
                                        <input type="text" class="form-control" id="shengao" placeholder="身高">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">体重</label>
                                        <input type="text" class="form-control" id="tizhong" placeholder="体重">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">工作</label>
                                        <input type="text" class="form-control" id="gongzuo" placeholder="工作">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">薪资</label>
                                        <input type="text" class="form-control" id="xinzi" placeholder="薪资">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputCity1">住址</label>
                                        <input type="text" class="form-control" id="zhuzhi" placeholder="住址">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword4">爱好</label>
                                        <input type="text" class="form-control" id="aihao" placeholder="爱好">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleTextarea1">择偶标准</label>
                                        <textarea class="form-control" id="biaozun" rows="4"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>个人靓照</label>
                                        <input type="file" name="img[]" class="file-upload-default">
                                        <div class="input-group col-xs-12">
                                            <input type="text" class="form-control file-upload-info" disabled placeholder="提交文件">
                                            <span class="input-group-append">
                                                <button class="file-upload-browse btn btn-gradient-primary" type="button">提交</button>
                                            </span>
                                        </div>
                                    </div>


                                    <button id="tijiao" type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
                                    <button class="btn btn-light">Cancel</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer"></footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/js/vendor.bundle.base.js"></script>
    <script src="~/js/vendor.bundle.addons.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/js/dashboard.js"></script>
    <!-- End custom js for this page-->
    <script src="~/js/jquery-2.1.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var nan = $("#nan").text();
            var nv = $("#nv").text();
            if (nan == "1") {
                $("#nan").text("男性信息列表");
                $("#nv").text("女性信息列表")
                $("#xingbie").css("display", "none");
                $("#nvxing").css("display", "none");
            } else if (nv == "0") {
                $("#nan").text("男性信息列表");
                $("#nv").text("女性信息列表");
                $("#xingbie1").css("display", "none");
                $("#nanxing").css("display", "none");
            }
            $("#tijiao").click(function () {
                var boyName = $("#exampleInputName1").val();
                var boySex = $("input[type='radio']:checked").val();
                var boyAge = $("#nianling").val();
                var boyfonle = $("#shoujihao").val();
                var boymail ="@name";
                var boyHeight = $("#shengao").val();
                var boyWeight = $("#tizhong").val();
                var boyjob = $("#gongzuo").val();
                var boyjobMoney = $("#xinzi").val();
                var boyAddress = $("#zhuzhi").val();
                var boyHobbly = $("#aihao").val();
                var boymate = $("#biaozun").val();
                //alert(boyName);
                //alert(boySex);
                //alert(boyAge);
                //alert(boyfonle);
                //alert(boymail);
                //alert(boyHeight);
                //alert(boyWeight);
                //alert(boyjob);
                //alert(boyjobMoney);
                //alert(boyAddress);
                //alert(boyHobbly);
                //alert(boymate);
                $.ajax({
                    url: "/PerInfo/Add",
                    dataType: "json",
                    type: "post",
                    data: { "boyName": boyName, "boySex": boySex, "boyAge": boyAge, "boyfonle": boyfonle, "boymail": boymail, "boyHeight": boyHeight, "boyWeight": boyWeight, "boyjob": boyjob, "boyjobMoney": boyjobMoney, "boyAddress": boyAddress, "boyHobbly": boyHobbly, "boymate": boymate, },
                    success: function (refult) {
                        if (refult == 0) {
                            alert("保存失败！");
                        } else if (refult == 1) {
                            alert("保存成功");
                            window.location.href = "/PerInfo/Perinfo";
                        }
                    }
                })
            })
        })
    </script>
</body>
</html>

