
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/js/jquery-1.3.1.js"></script>
    <style type="text/css">
        .tou {
            list-style-type: none;
            float: left;
            width: 300px;
            height: 100px;
            border: 1px solid red;
        }

        ul {
            overflow: hidden;
        }

        .nei {
            width: 900px;
            height: 300px;
            border: 1px solid blue;
            margin-left:40px;
        }
        #nr2 {
            display:none;

        }
        #nr3 {
            display: none;
        }
    </style>
</head>
<body>
    <div> 
        <div>
            <ul>
                <li class="tou" name="nr1">1</li>
                <li class="tou" name="nr2">2</li>
                <li class="tou" name="nr3">3</li>
            </ul>
            <form>
                <div class="nei" id="nr1">
                    <table>
                        <tr>
                            <td>姓名：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td> 性别：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td>   班级：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td>年龄：</td>
                            <td> <input type="text" name="name" /></td>
                    </table>
                    <input class="btn" name="nr2" type="button" value="下一页" />
                </div>
                <div class="nei" id="nr2">
                    <table>
                        <tr>
                            <td>学号：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td> 职位：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td>  薪资：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                    </table>
                    <input class="btn" name="nr3" type="button" value="下一页" />
                </div>
                <div class="nei" id="nr3">
                    <table>
                        <tr>
                            <td>学号：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td> 备注：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                        <tr>
                            <td>   时间：</td>
                            <td> <input type="text" name="name" /></td>
                        </tr>
                    </table>
                    <input type="button" value="提交" />
                    <input type="button" value="查看" />
                </div>
            </form>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $(".tou").click(function () {
                $(".nei").css("display", "none")
                $("#" + $(this).attr("name")).css("display", "block")
            })
            $(".btn").click(function () {
                $(".nei").css("display", "none")
                $("#" + $(this).attr("name")).css("display", "block")
            })
        });
    </script>
</body>
</html>
